<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/global.css" />
		<script src="https://cdn.tailwindcss.com"></script>
		<title>Ingredients Inventory</title>
	</head>
	<body class="bg-slate-100">
		<%- include('../partials/_navbar.ejs') %>
		<section class="container mx-auto my-32">
			<div class="flex justify-between">
				<div class="flex flex-col gap-4">
					<h1 class="font-semibold text-4xl">Ingredients Inventory</h1>
					<p class="font-light opacity-70">
						Select an ingredient to view, update, or delete.
					</p>
				</div>
				<a
					href="/ingredients/new"
					class="bg-[#162D3A] text-base text-white font-normal rounded-xl py-1 px-4 h-fit hover:animate-pulse"
					>Add new</a
				>
			</div>

			<div class="grid grid-cols-6 gap-5 mt-20">
				<% ingredients.forEach((ingredient) => { %>
				<a
					href="/ingredients/<%= ingredient._id %>"
					class="transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-105 hover:shadow-lg bg-white p-5 rounded-2xl flex flex-col gap-4"
				>
					<h3 class="text-xl font-semibold"><%= ingredient.name %></h3>
					<div class="flex gap-1">
						<img src="/user.svg" alt="User" class="w-5" />
						<h6><%= ingredient.owner.username %></h6>
					</div>
				</a>
				<% }) %>
			</div>
		</section>
	</body>
</html>
